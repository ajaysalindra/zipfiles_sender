<section class="container">
	<div class= "panel-primary">
	<div class="panel-heading" align="center">
		<h1 class="text-default">List of Cyborgs</h1>
	</div>
	<div class="jumbotron-new">
	<table class="table">
		<tr>
			<th class="text-success">Name</th><br>
			<th class="text-success">Email</th>
		</tr>
		<% @cyborgs.each do |cyborg| %>
		<tr>
			<td><%= cyborg.name %></td>
			<td><%= cyborg.email %></td>
			<td><%= link_to 'Edit', edit_cyborg_path(cyborg) %></td>
			<td><%= link_to 'Delete', cyborg_path(cyborg), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		
		<% end %>
	</table>
	<div align="left"><%= link_to 'Add Cyborgs', new_cyborg_path, :class => "btn  btn-danger" %>
		<%= link_to 'Back', root_path, :class => "btn btn-danger" %>
	</div>
	</div>
	</div>

</section>